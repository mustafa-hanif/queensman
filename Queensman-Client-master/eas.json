{
  "build": {
    "android": {
      "image": "latest",
      "env": {
        "PLATFORM": "android"
      }
    },
    "ios": {
      "image": "latest",
      "env": {
        "PLATFORM": "ios"
      }
    }
  },
  "staging": {
    "extends": "base",
    "env": {
      "ENVIRONMENT": "staging"
    },
    "distribution": "internal",
    "android": {
      "buildType": "apk"
    },
    "ios": {
      "buildType": "ipa"
    }
  },
  "development": {
    "extends": "base",
    "developmentClient": true,
    "env": {
      "ENVIRONMENT": "development"
    },
    "android": {
      "distribution": "internal",
      "withoutCredentials": true
    },
    "ios": {
      "simulator": false,
      "buildConfiguration": "Release",
      "distribution": "adhoc"
    }
  }
}