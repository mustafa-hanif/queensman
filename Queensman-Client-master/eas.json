{
  "build": {
    "android": {
      "image": "latest",
      "env": {
        "PLATFORM": "android"
      }
    },
    "ios": {
      "image": "latest",
      "env": {
        "PLATFORM": "ios"
      }
    }
  },
  "development": {
    "extends": "base",
    "developmentClient": true,
    "env": {
      "ENVIRONMENT": "development"
    },
    "android": {
      "distribution": "internal",
      "withoutCredentials": true
    },
    "ios": {
      "simulator": true,
      "buildConfiguration": "Debug",
      "distribution": "adhoc"
    }
  }
}